description "LXC Network"

start on starting lxc or starting lxc-instance
stop on stopped lxc

pre-start script
	mkdir -p /run/lxc
	exec /usr/local/lib/lxc-net/bridge-up
end script

exec /usr/local/lib/lxc-net/dnsmasq --pid-file=/run/lxc/dnsmasq.pid

post-start exec touch /run/lxc/network_up

post-stop script
	/usr/local/lib/lxc-net/bridge-down
	exec rm -f /run/lxc/dnsmasq.pid /run/lxc/network_up
end script
